{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "DigitalSign": {
    "VNPT": {
      "ApiUrl": "https://api.vnpt-ca.vn",
      "ApiKey": "your-vnpt-api-key",
      "SecretKey": "your-vnpt-secret-key",
      "ClientId": "your-vnpt-client-id",
      "ClientSecret": "your-vnpt-client-secret",
      "UseSandbox": true,
      "TimeoutSeconds": 30,
      "TrustedCertificatePath": "certificates/vnpt-ca-root.crt"
    },
    "Viettel": {
      "BaseUrl": "https://cloudsign.viettel.vn",
      "ClientId": "your-viettel-client-id",
      "ClientSecret": "your-viettel-client-secret",
      "GrantType": "client_credentials",
      "Scope": "sign verify certificate",
      "UseTestEnvironment": true,
      "TokenExpiryMinutes": 60,
      "TrustedCertificatePath": "certificates/viettel-ca-root.crt"
    },
    "Security": {
      "EncryptionKey": "your-encryption-key-32-chars-long",
      "HashAlgorithm": "SHA256",
      "KeyLength": 2048,
      "ValidateCertificateChain": true,
      "CheckRevocation": true,
      "RequireTimestamp": true,
      "TrustedRootCAs": [
        "VNPT-CA Root Certificate",
        "Viettel-CA Root Certificate"
      ]
    }
  }
}
